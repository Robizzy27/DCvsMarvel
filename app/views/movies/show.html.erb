<h1><%= @movie.title %></h1>
<p>Directed by <%= @movie.director.name %></p>
<p><%= image_tag @movie.image %></p>
Released in <%= @movie.opening%> by <%= @movie.publisher.name %> Comics
<p><%= @movie.synopsis %></p>
<h2>Actors:</h2>
<% @movie.actors.each do |actor| %>
  <div>
    <h3><%= actor.name %></h3>
    <%= image_tag actor.image %>
  </div>
<% end %>
