<div class="movieshow">
  <h1><%= @movie.title %> (<%= @movie.opening%>)</h1>
  <p>Directed by <%= @movie.director.name %></p>
  <table>
    <tr>
      <td>
        <%= image_tag @movie.image %>
      </td>
      <td>
        <table>
          <tr>
            <td>
              <p>Released in <%= @movie.opening%> by <%= @movie.publisher.name %> Comics with a budget of <%= @movie.budget %>.</p>
              <p><%= @movie.synopsis %></p>
            </td>
          </tr>
          <tr>
            <td>
              <h3>Director:</h3>
                <div class="actor">
                  <h3><%= @movie.director.name %></h3>
                  <%= image_tag @movie.director.image %>
                </div>
            </td>
            <td>
              <h3>Actors:</h3>
              <% @movie.actors.each do |actor| %>
                <div class="actor">
                  <h3><%= actor.name %></h3>
                  <%= image_tag actor.image %>
                </div>
              <% end %>
            </td>
          </tr>
        </table>
      </td>
    </tr>
    <tr>
      <td>
          <h3>Director:</h3>
            <div class="actor">
              <h3><%= @movie.director.name %></h3>
              <%= image_tag @movie.director.image %>
            </div>
      </td>
      <td>
        <h3>Actors:</h3>
        <% @movie.actors.each do |actor| %>
          <div class="actor">
            <h3><%= actor.name %></h3>
            <%= image_tag actor.image %>
          </div>
        <% end %>
      </td>
    </tr>
  </table>
</div>
